{% extends 'base.html.twig' %}

{% block title %}Event index{% endblock %}
    
{% block body %}

    <style> 
        * {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

       .header-image {
  background-image: url("/images/header.jpeg"); /* Replace with path to your image */
  background-size: cover;
  background-position: center;
  padding: 10vh; /* Adjust height as needed */
  display: flex;
  flex-direction: column;
  justify-content: center; /* Centers content vertically within the header */
  text-align: center; /* Centers text horizontally within the header */
  color: white; /* Ensures text is visible */
  margin-bottom:5vh;
}
.titles{
      background: rgba(0, 0, 0, 0.5);
      padding:2vh;
      display:block;
      width:100%;
}



h2 {
            font-size: 3em;
            font-weight: bold;
            color: white; 
            margin-bottom: 20px;
            background: linear-gradient(135deg, #7fb3d5, #d2a6d0);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            text-align:center;
        }

h4 {
            font-size: 1.5em;
            font-weight: bold;
            color: white; 
            margin-bottom: 20px;
            background: linear-gradient(135deg, #7fb3d5, #d2a6d0);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            display: inline-block;
}

        #content {
            height: 400px;
            padding: 5px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .buttons {
            display: flex;
            justify-content: flex-end;
            gap: 1px;
        }

        #pic {
            height: 200px;
            object-fit: cover;
        }

        #cbody {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            height: 100%;
        }

        #ctitle, #ctext {
            margin-bottom: 10px;
        }

      

  
    </style>


    <div class="header-image">
    <div class="titles"> 
        <h2>Find events!</h1>
        <h4>Welcome to your real-time gateway to world events. Discover and explore the latest happenings from every corner of the globe, all in one place. 
        <br>
        Stay informed, stay connected.</h3>
</div>
</div>

        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            {% for event in events %}
            <div class="p-3">
                <div class="card" style="width: 18rem;" id="content">
                    <img src="{{ asset('images/' ~ event.image) }}" id="pic" class="card-img-top" alt="...">
                    <div class="card-body" id="cbody">
                        <h5 class="card-title" id="ctitle">{{ event.name }}</h5>
                        <p class="card-text" id="ctext"><i class="bi bi-calendar-event"></i> {{ event.dateTime ? event.dateTime|date('Y-m-d H:i:s') : '' }}</p>
                        <div class="buttons">
                            <a href="{{ path('app_event_show', {'id': event.id}) }}" class="btn" id="button"><i class="bi bi-info"></i></a>
                            <a href="{{ path('app_event_edit', {'id': event.id}) }}" class="btn" id="button"><i class="bi bi-pencil"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            {% else %}
            <p>No records found</p>
            {% endfor %}
        </div>
 </div>
      
{% endblock %}
