{% extends 'base.html.twig' %}

{% block title %}New Event{% endblock %}

{% block body %}
    <h1>Create a new Event</h1>

{{ form_start(form, {'attr': {'class':'glassmorphism-form'}}) }}
    {{ form_widget(form) }}
    <div class= "flex">
    <button class="btn" id="button">{{ button_label|default('Save') }}</button>
      <a href="{{ path('app_event_index') }}"   class="btn" id="button">Back to  the list</a>
      </div>
{{ form_end(form) }}
    
  
    
    
    
    <style>

    #button{
    padding: 10px 20px;
    border: none;
    border-radius: 10px;

    color: white;
    font-size: 16px;
    cursor: pointer;
    width:50%;
    margin-top: 50px;
    
    }

    h1{
        text-align:  center;
        font-size: 2.5em;
    }

.flex{
    display :flex;
    justify-content: space-around;
}

.glassmorphism-form {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 15px;
    padding: 20px;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    max-width: 400px;
    width:100%;
    
    margin: 0 auto;
}





.glassmorphism-form label {
    color: #555;
    font-size: 14px;
}





{% endblock %}

