{% extends 'base.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}
    <style> 
    h1{
        padding:5px;
        text-align:center;

    }

    #content{

    height: 400px;
    padding: 5px;


    }

.buttons{
    margin-bottom:10%;
    display:flex;
    justify-content: flex-end;
    gap:1px;
}

    
</style>

    <h1>Find events!</h1>
    <div class="container"> 
        <div class="row  row-cols-lg-3  row-cols-md-2 row-cols-sm-1">
    

   
            {% for event in events %}
                <div class="p-3">
                    <div class="card " style="width: 18rem;" id="content">
                        <img src="{{ asset('images/' ~ event.image) }}" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">{{ event.name }}</h5>
                            <p class="card-text"><i class="bi bi-calendar-event"></i> {{ event.dateTime ? event.dateTime|date('Y-m-d H:i:s') : '' }}</p>
                            <div class="buttons">
                            <a href="{{ path('app_event_show', {'id': event.id}) }}" class="btn" id="button"><i class="bi bi-info"></i></a>
                            <a href="{{ path('app_event_edit', {'id': event.id}) }}" class="btn" id="button"><i class="bi bi-pencil"></i></a>
                            </div>
                        </div>
                    </div>
                </div>

            {% else %}

            <p> No records found </p>

            {% endfor %}
        </div>
    
    </div>
     
   
<br>

    
{% endblock %}