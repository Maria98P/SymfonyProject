{% extends 'base.html.twig' %}


{% block title %}Edit Event{% endblock %}

{% block body %}

<style>
    h1 {
        font-size: 2.5em;
        text-align: center;
    }

    #button {
        padding: 10px 10px;
        border: none;
        border-radius: 10px;
        color: white;
        font-size: 12px;
        cursor: pointer;
        width: 100%;
      margin-top:5vh;
        text-align: center;
    
        
        
    }

    .flex {
        display: flex;
        justify-content: space-around;
    }

    .glassmorphism-form {
        background: rgba(255, 255, 255, 0.2);
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        max-width: 600px;
        width: 100%;
        margin: 0 auto;
    }

    .glassmorphism-form label {
        color: #555;
        font-size: 14px;
    }
.delete{
    display:flex;
    justify-content: center;
    width: 70%;
}
.deleteButton{
    padding:150px;
     width: 100px;
}
</style>



<h1>Edit Event</h1>


{{ form_start(form, {'attr': {'class':'glassmorphism-form', 'enctype': 'multipart/form-data'}}) }}
    {{ form_widget(form) }}
    <div class="flex">
        <button class="btn" id="button">{{ button_label|default('Save') }}</button>
        <a href="{{ path('app_event_index') }}" class="btn" id="button">Back to the list</a>
       
    

    </div>
 
{{ form_end(form) }}

    


{% endblock %}
