{% extends 'base.html.twig' %}


{% block title %}Edit Event{% endblock %}

{% block body %}

<style>
    h1 {
        font-size: 2.5em;
        text-align: center;
    }

    #button {
        padding: 10px 20px;
        border: none;
        border-radius: 10px;
        color: white;
        font-size: 16px;
        cursor: pointer;
        width: 50%;
        margin-top: 30px;
        margin-left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
    
        
        
    }

    .flex {
        display: flex;
        justify-content: space-around;
    }

    .glassmorphism-form {
        background: rgba(255, 255, 255, 0.2);
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        max-width: 400px;
        width: 100%;
        margin: 0 auto;
    }

    .glassmorphism-form label {
        color: #555;
        font-size: 14px;
    }
</style>

<h1>Edit Event</h1>

<div class="glassmorphism-form">
    {{ include('event/_form.html.twig', {'button_label': 'Update'}) }}
    <a href="{{ path('app_event_index') }}" class="btn" id="button">Go back to list</a>

{{ include('event/_delete_form.html.twig') }}
</div>



{% endblock %}
