{% extends 'base.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}
    <style> 
        * {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        h2 {
            font-size: 3em;
            font-weight: bold;
            color: white; 
            margin-bottom: 20px;
            background: linear-gradient(135deg, #7fb3d5, #d2a6d0);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            text-align:center;
        }

        h4 {
            font-size: 1.5em;
            font-weight: bold;
            color: white; 
            margin-bottom: 20px;
            background: linear-gradient(135deg, #7fb3d5, #d2a6d0);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            display: inline-block;
            text-align:center;
        }

        #content {
            height: 400px;
            padding: 5px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .buttons {
            display: flex;
            justify-content: flex-end;
            gap: 1px;
        }

        #pic {
            height: 200px;
            object-fit: cover;
        }

        #cbody {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            height: 100%;
        }

        #ctitle, #ctext {
            margin-bottom: 10px;
        }

        .carousel-container {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            background: linear-gradient(135deg, #3498db, #8e44ad);
            margin-top: 30px;
        }

        .carousel-item img {
            max-width: 50%; 
            height: auto; 
            display: block; 
            margin: 0 auto; 
            box-shadow: 10px 10px inset grey;
        }


       .carousel-item  .overlay {
  position: absolute;
  top: 70%;
  right:50%;
  transform:translate(50%,50%);
  background: rgb(0, 0, 0);
  background: rgba(0, 0, 0, 0.5); /* Black see-through */
  color: black;
  width: 50%;
  
  opacity:0;
  color: white;
  font-size: 20px;
  padding: 20px;
  text-align: center;
}
.carousel-item:hover .overlay {
  opacity: 1;
}

.header-image {
  background-image: url("/images/header.jpeg"); /* Replace with path to your image */
  background-size: cover;
  background-position: center;
  padding: 10vh; /* Adjust height as needed */
  display: flex;
  flex-direction: column;
  justify-content: center; /* Centers content vertically within the header */
  text-align: center; /* Centers text horizontally within the header */
  color: white; /* Ensures text is visible */
  margin-bottom:5vh;
}
.titles{
      background: rgba(0, 0, 0, 0.5);
      padding:2vh;
      display:block;
      width:100%;
}

    </style>

<div class="header-image">
    <div class="titles"> 
        <h2>Find events!</h1>
        <h4>Welcome to your real-time gateway to world events. Discover and explore the latest happenings from every corner of the globe, all in one place. 
        <br>
        Stay informed, stay connected.</h3>
</div>
</div>
<div class="container">
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            {% for event in events %}
            <div class="p-3">
                <div class="card" style="width: 18rem;" id="content">
                    <img src="{{ asset('images/' ~ event.image) }}" id="pic" class="card-img-top" alt="...">
                    <div class="card-body" id="cbody">
                        <h5 class="card-title" id="ctitle">{{ event.name }}</h5>
                        <p class="card-text" id="ctext"><i class="bi bi-calendar-event"></i> {{ event.dateTime ? event.dateTime|date('Y-m-d H:i:s') : '' }}</p>
                        <div class="buttons">
                            <a href="{{ path('app_user_show', {'id': event.id}) }}" class="btn" id="button"><i class="bi bi-info"></i></a>
                
                        </div>
                    </div>
                </div>
            </div>
            {% else %}
            <p>No records found</p>
            {% endfor %}
        </div>
 </div>
        <div class="carousel-container">
            <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="/images/c1.jpg" class="d-block w-50" alt="...">
                        <p class="overlay" >  Take a dip in fun with a refreshing lake swim!</p> 
                    </div>
                    <div class="carousel-item">
                        <img src="/images/c2.jpg" class="d-block w-50" alt="...">
                        <p class="overlay" > Ride the iconic Prater carousel for a touch of Viennese magic.</p> 
                    </div>
                    <div class="carousel-item">
                        <img src="/images/c3.jpg" class="d-block w-50" alt="...">
                        <p class="overlay" > Unleash your creativity in a vibrant explosion of color!</p> 
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
   
{% endblock %}

